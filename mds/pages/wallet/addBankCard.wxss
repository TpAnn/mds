.container {
  padding: 0;
}

.container > text {
  display: block;
  width: 100%;
  text-align: center;
}

.container > text.tit {
  margin-top: 60rpx;
  font-weight: 700;
  font-size: 66rpx;
}

.container > text.tit + text {
  font-size: 30rpx;
  line-height: 30rpx;
}

.list-box {
  margin-top: 40rpx;
  width: 100%;
  font-size: 28rpx;
}

.list-box-item {
  position: relative;
  padding: 20rpx 0;
  padding-left: 200rpx;
  border-bottom: 1rpx solid #e2e0e0;
}

.list-box-item text {
  display: block;
  line-height: 35rpx;
}

.list-box-item input {
  padding-right: 25rpx;
}

.list-box-item:first-child {
  border-top: 1rpx solid #e2e0e0;
}

.list-box .labelText {
  position: absolute;
  top: 50%;
  left: 25rpx;
  transform: translateY(-50%);
}

.list-box-item:last-child button {
  position: absolute;
  top: 50%;
  right: 25rpx;
  z-index: 10;
  transform: translateY(-50%);
  padding: 0;
  width: 160rpx;
  line-height: 50rpx;
  font-size: 22rpx;
  background-color: #8cba28;
  color: #fff;
}

.container > button {
  padding: 0;
  margin-top: 80rpx;
  width: 260rpx;
  line-height: 75rpx;
  font-size: 30rpx;
  border-radius: 80rpx;
  background-color: #8cba28;
  color: #fff;
}