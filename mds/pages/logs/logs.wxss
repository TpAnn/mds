/* pages/logs/logs.wxss */
page{
  background-color: #f5f5f5
}
.ioginBox{
  width: 100%;
  position: absolute;
  background-color:#fff;
  border-radius:10rpx;
  font-size: 30rpx;
   border-top: #dbdbdb 1rpx solid;
 
}

.loginTitle image{
  width: 25rpx;
  height: 25rpx;
  float: right;
  margin-right: 30rpx;
  font-size: 30rpx;
  margin-top:30rpx;
}

.loginContent{
  border-bottom: #dbdbdb 1rpx solid;
  padding-top:30rpx;
  padding-bottom:30rpx;
}
.loginContent input{
  border:#eee 1px solid;
  width: 80%;
  margin: 0 auto;
  height: 60rpx;
  line-height: 60rpx;
  background-color:#f0f0f0;
  text-align: left;
  margin-bottom:20rpx;
   padding-left:10rpx; 
  color:#363636;
 
}
.phcolor{
  padding-left:10rpx;
  color:#878787;
}
.loginBottom{
  width: 100%;
  background: #f4f4f4;
  height: 100rpx;
  padding-top: 60rpx;
   
}
.loginBottom view{
  width: 280rpx;
  line-height: 80rpx;
  height: 80rpx;
  text-align: center;
  font-size: 30rpx;
   background-color: #8cba28;
  color: #fff;
  border-radius: 40rpx;
  margin:0 auto;
}

.code{
  width: 150rpx;
  float: left;
  line-height: 60rpx;
  background-color:red;
  margin-left: 15rpx;
  font-size: 25rpx;
}
.content-title{
  width: 60%;
  margin:0 auto;
  margin-bottom:20rpx;
  text-align: center
}
.titleTxt{
  color:#e85656;
  width:90%;
  overflow:hidden;
  font-size:25rpx;
  text-align:left;
  padding-left:10%;
  padding-bottom:21rpx;
  line-height:30rpx;

}
.titleTxt image{
  width: 20rpx;
  height: 20rpx;
  backgorund:red;
  margin-right:5rpx;
  
}
.buttonget
{  
    width:150rpx;
   height:60rpx; 
   line-height: 60rpx;
   font-size: 25rpx;
   background-color:#f0f0f0;
   border-top-style: none;
    border-right-style: none;
    border-bottom-style: none;
    border-left-style: none;
    border-radius: 0rpx;
}

/*隐藏Button按钮本身的边框*/

button[class="buttonget"]::after {
  border: 0;
} 
.bBox{
 width: 200rpx;
 height: 200rpx;
 background-color:#8dba29;
 border-radius:50%;
