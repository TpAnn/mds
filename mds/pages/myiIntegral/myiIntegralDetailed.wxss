page {
  background-color: #f5f5f5;
}

.container .header {
  width: calc(100%-52rpx);
  line-height: 128rpx;
  padding: 0 26rpx;
  font-size: 28rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e6e6e6;
}

.container .header text {
  font-size: 100rpx;
  font-weight: 700;
  color: #8dba29;
}

.nav {
  width: 100%;
  line-height: 75rpx;
  display: flex;
  font-size: 26rpx;
  background-color: #fff;
  text-align: center;
}

.nav .inner {
  flex: 1;
}

.nav .inner text {
  padding: 0 30rpx;
  position: relative;
}

.nav .inner.active text {
  padding: 0 30rpx;
  color: #8dba29;
}

.nav .inner.active text:after {
  content: '';
  position: absolute;
  top: 53rpx;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #8dba29;
}

.list {
  display: none;
}

.list.active {
  display: block;
}

.list-box {
  width: 100%;
}

.list-box .list-item > text {
  line-height: 60rpx;
  padding-left: 26rpx;
  font-size: 20rpx;
}

.list-box .list-item .fr {
  float: right;
}

.inner-box {
  position: relative;
  padding: 30rpx 26rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e6e6e6;
}

.inner-box .inner-item text {
  font-size: 20rpx;
  line-height: 35rpx;
  display: block;
}

.inner-box .inner-item text:last-child {
  color: #888;
}

.inner-box text.fr {
  position: absolute;
  right: 26rpx;
  top: 50%;
  transform: translateY(-50%);
}