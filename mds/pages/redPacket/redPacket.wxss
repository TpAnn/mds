page {
  background-color: #f5f5f5;
}

text.fontc-red {
  color: #e74c54;
}

.container {
  font-size: 24rpx;
}

view.tips {
  line-height: 50rpx;
  height: 50rpx;
  padding-left: 26rpx;
}

.list-box {
  width: calc( 100% - 52rpx );
  padding: 0 26rpx;
}

.list-item {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.list-item.disable {
  opacity: .7;
}

.list-item .header {
  position: relative;
  padding: 0 180rpx 45rpx;
}

.list-item .header .price,
.list-item .header .btn {
  position: absolute;
}

.list-item .header .price {
  top: 40rpx;
  left: 50rpx;
  color: #e74c54;
  font-size: 88rpx;
}

.list-item.disable .header .price {
  color: #888;
}

.list-item .price text {
  position:absolute;
  top:70rpx;
  left:-15rpx;
  font-size:24rpx;
} 

.list-item .header .btn {
  top: 50rpx;
  right: 26rpx;
  text-align: center;
}

.list-item .btn button {
  display: none;
  width: 120rpx;
  padding: 0;
  font-size: 24rpx;
  background-color: #e74c54;
  color: #fff;
}

.list-item .btn text + button {
  display: block;
}

.list-item.disable .btn text,
.list-item.disable .btn button {
  display: none;
}

.list-item.disable .btn button.disable {
  display: block;
  margin-top: 24rpx;
  background-color: #e6e6e6;
  color: #888;
}

.list-item .content text:first-child {
  text-align: center;
  line-height: 100rpx;
  font-weight: 700;
  font-size: 30rpx;
  color: #555;
}

.list-item .content text {
  line-height: 35rpx;
  display: block;
  color: #888;
}

.list-item .footer {
  margin: 0 26rpx;
  padding: 0 15rpx;
  line-height: 66rpx;
  color: #888;
  border-top: 1rpx solid #e6e6e6;
}

.list-item .footer .fr {
  float: right;
}

.list-item.disable .footer .fr {
  display: none;
}