page {
  background-color: #e6e6e6;
}

.list {
  width: clac(100%-52rpx);
  padding: 0 26rpx;
}

.list .list-item {
  position: relative;
  height: 230rpx;
  margin-bottom: 30rpx;
  padding: 0 26rpx;
  border-radius: 10rpx;
  background-color: #fff;
}

.list.disable {
  opacity: .7;
}

.list .list-item:first-child {
  margin-top: 50rpx;
}

.list .list-item .content {
  float: left;
  width: 380rpx;
  font-size: 30rpx;
  padding-left: 10rpx;
  font-weight: 100rpx;
  line-height: 115rpx;
}

.list-item .content text {
  color: #888;
}

.list-item .status {
  position: absolute;
  top: 50%;
  margin-top: -10rpx;
  right: 65rpx;
  transform: translateY(-50%);
  color: #e64360;
}

.list.disable .status {
  color: #888;
}

.list .list-item .content:first-child {
  padding-left: 70rpx;
  border-bottom: 1rpx solid #e6e6e6;
  background-image: url('data:image/png;base64,');
  background-position: 10rpx 33rpx;
  background-size: 44rpx 40rpx;
  background-repeat: no-repeat;
}

.list.disable .list-item .content:first-child {
  background-image: url('data:image/png;base64,');
}