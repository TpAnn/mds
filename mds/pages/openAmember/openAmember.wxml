      <view class='list' wx:if="{{showNumFlag==1}}">
          <view class='list-item'>黄金会员1元=1.2积分</view>
      </view>
      <view class='list' wx:if="{{showNumFlag==1}}">
          <view class='list-item'>白金会员1元=1.5积分</view>
