 @import "../../WxEmojiView/WxEmojiView.wxss"; 
page{
  background-color: #f4f4f4;
}
.conent{
  overflow: hidden;
  height: 781rpx;
}


/**表情包**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.WxEmojiTextarea{
    border: 2rpx solid #eee;
    margin: 10rpx;
    width: 57%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/* .listL{
