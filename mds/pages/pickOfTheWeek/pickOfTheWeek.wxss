page{
  height: 100%;
}
.nav {
    height: 100rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #f7f7f7;
    font-size: 30rpx;
    white-space: nowrap;
    background-color:#fff;
    border-top: 1rpx solid #f5f5f5;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
}
.nav-item {
  padding: 0 35rpx;
  display: inline-block;
  text-align: center;
  height: 97rpx;
}
.nav-item text {
  position: relative;
}
.nav-item text:after {
  content: '';
  position: absolute;
  top: 150%;
  left: 0;
  width: 100%;
  height: 4rpx;
}
.nav-item.active {
  font-weight: 700;
  color: #8bbb29;
}
.nav-item.active text:after {
  background-color: #8bbb29;
}
.tab-box{
