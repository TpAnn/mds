.conentList{
  width: 100%;
  height: 87rpx;
  background-color: #fff;
  color: #888;
  font-size: 30rpx;
  border-top:#e2e0e0 solid 1rpx;
}
.conentList:last-child{
  margin-top:15rpx;
}
.conentList view{
  float: left;
  line-height: 87rpx;
  overflow: hidden;
}
.conentList view:first-child{
  width:25%;
  float: left;
}
.conentList > view:first-child{
  padding-left: 26rpx;
  color:#555;
}
.conentList text{
  color: #353535;

}
.conentList switch{
  margin-left:50rpx;
}
.conentList input{
  float: left;
  height: 87rpx;
  line-height: 87rpx;
  font-size: 30rpx;
  color: #353535
}
.inputClass{
   font-size: 30rpx;
   color: #353535;
}
.ssq{
  width: 50%;
  border:blue 1rpx solid;
  float:left;
}
.bottom{
  width: 100%;
  overflow: hidden
}
.bottom view{
  width: 280rpx;
  height: 82rpx;
  float: left;
  border-radius: 40rpx;
  text-align: center;
  line-height: 82rpx;
  font-size: 30rpx;
  margin-left: 60rpx;
  margin-top: 60rpx;
  }
.bottom view:first-child{
  border:#888888 1rpx solid;
  background-color: #fff;
  color:#8cba28;
  
}
.bottom view:last-child{
  border:#8cba28 1rpx solid;
  background-color: #8cba28;
  color:#fff;
  
}
.conentList view:last-child{
  color: #353535
}



