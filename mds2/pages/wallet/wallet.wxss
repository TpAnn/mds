page {
  background-color: #e2e0e0;
}

.container {
  padding: 0;
}

.card-box {
  width: 100%;
  background-color: #fff;
  display: flex;
  border-top: 10rpx solid #f5f5f5;
}

.card-box:first-child {
   border-top: none;
   padding: 50rpx 0;
}

.card-box-item {
  padding: 30rpx 0;  
  position: relative;
  flex: 1;
  width: 100%;
  height: 100%;  
  text-align: center;
}

.card-box-item .icon {
  position: absolute;
  top: 35rpx;
}

.card-box-item .icon.first {
  left: 65rpx;
  width: 34rpx;
  height: 34rpx;
}

.card-box-item .icon.last {
  left: 85rpx;
  width: 38rpx;
  height: 30rpx;
}

.card-box:first-child .card-box-item text.tit {
  font-weight: 100;
  font-size: 58rpx;
}

.card-box:last-child .card-box-item:first-child {
  border-right: 1rpx solid #f5f5f5;
}

.card-box-item text.tit {
  display: block;
  position: relative;
  color: #888888;
  font-size: 30rpx;
}

.card-box-item text {
  font-size: 28rpx;
}

.card-box-item text.fc-red {
  display: block;
  color: #e64340;
  font-size: 58rpx;
}

.card-box-item text.fc-gray {
  color: #888;
  font-weight: 100;
}

.card-box-item text.bold {
  font-weight: 700;
}
